<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Axounaut" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_002</item>
        <item name="colorPrimaryVariant">@color/ginger</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_light_1</item>
        <item name="colorSecondaryVariant">@color/green_light_2</item>
        <item name="colorOnSecondary">@color/ginger</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>


    </style>

    <!-- Override listChoiceBackgroundIndicator. -->
    <style name="ThemeOverlay.AppCompat.Light" parent="Base.Widget.AppCompat.AutoCompleteTextView">
        <item name="listChoiceBackgroundIndicator">?android:attr/listChoiceBackgroundIndicator
        </item>
    </style>

    <style name="App.custom.EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="App.custom.MediumEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="App.custom.ShortEditText" parent="@android:style/Widget.EditText">
        <item name="android:width">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="Theme.Axounaut.Fullscreen" parent="Theme.Axounaut">
        <item name="android:actionBarStyle">@style/Widget.Theme.Axounaut.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Axounaut.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>