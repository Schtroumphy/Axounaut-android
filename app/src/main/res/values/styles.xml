<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
        <item name="behavior_peekHeight">750dp</item>

    </style>

    <style name="AccentButton" parent="ThemeOverlay.AppCompat.Dark">
        <!-- customize colorButtonNormal for the disable color -->
        <item name="colorButtonNormal">@color/gray_2</item>
        <!-- customize colorAccent for the enabled color -->
        <item name="android:colorAccent">@color/orange_003</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/selector_bt_orange</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/bg_rounded</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/bg_rounded</item>
        <item name="android:backgroundTint">@color/green_light_1</item>
        <item name="android:paddingHorizontal">100dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="TextErrorStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/salamander_attenue</item>
        <item name="android:padding">15dp</item>
        <item name="android:fontFamily">@font/rosario_wght</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleStyle" parent="@android:style/TextAppearance">
        <item name="android:color">@color/salamander_attenue</item>
        <item name="android:fontFamily">@font/rosario_wght</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="LabelStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/selector_text_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/salamander</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="Widget.Theme.Axounaut.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Axounaut.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>