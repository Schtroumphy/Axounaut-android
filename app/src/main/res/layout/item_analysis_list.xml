<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_analysis_label"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_light"
        android:maxWidth="170dp"
        android:maxLines="1"
        android:textColor="@color/orange_002"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pain au beurre 1kg" />

    <TextView
        android:id="@+id/tv_article_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/tv_analysis_label"
        app:layout_constraintTop_toBottomOf="@id/tv_analysis_label"
        tools:text="Commandé plus de 10 fois" />

    <TextView
        android:id="@+id/tv_analysis_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:fontFamily="@font/roboto_medium"
        android:paddingHorizontal="20dp"
        android:paddingVertical="2dp"
        android:text="x 2"
        android:textColor="@color/green_light_2"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_analysis_label"
        app:layout_constraintEnd_toStartOf="@id/tv_analysis_price"
        app:layout_constraintTop_toTopOf="@id/tv_analysis_label" />

    <TextView
        android:id="@+id/tv_analysis_price"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:fontFamily="@font/roboto_light"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="2dp"
        android:text="200€"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv_analysis_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_analysis_label" />

</androidx.constraintlayout.widget.ConstraintLayout>