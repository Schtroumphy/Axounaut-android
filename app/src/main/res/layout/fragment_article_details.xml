<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.article.ArticleDetailsFragment">

    <LinearLayout
        android:id="@+id/ll_article_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_article_name"
            style="@style/App.custom.EditText"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="15dp"
            android:lines="1"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            android:hint="Nom de l'article"
            android:textAlignment="textStart"
            android:ems="10"
            android:maxLines="1"
            android:inputType="text"
            tools:text="" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_article_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="25dp"
        app:layout_constraintTop_toBottomOf="@id/ll_article_name"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/tv_article_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Prix : " />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_article_price"
            style="@style/App.custom.ShortEditText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:lines="1"
            android:textSize="14sp"
            android:imeOptions="actionDone"
            android:hint="10 "
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/tv_article_price_label"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="numberDecimal"
            tools:text="10" />

        <TextView
            android:id="@+id/tv_article_price_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/et_article_price"
            android:text="€" />

        <Spinner
            android:id="@+id/spinner_categories"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>



    <View
        android:id="@+id/view1"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/ll_article_price"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/gray_1" />

    <TextView
        android:id="@+id/tv_recipe_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recette"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view1"
        app:layout_constraintBottom_toBottomOf="@id/view1" />

    <View
        android:layout_width="150dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@id/view1"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/gray_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bientôt disponible"
        app:layout_constraintTop_toBottomOf="@id/tv_recipe_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_articles"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="35dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:padding="15dp"
        android:layout_marginBottom="15dp"
        tools:listitem="@layout/item_article"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_recipe_label" />

    <Button
        android:id="@+id/bt_add_article"
        style="@style/CustomButton"
        android:text="Ajouter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>