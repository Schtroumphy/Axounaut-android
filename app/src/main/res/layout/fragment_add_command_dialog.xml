<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_add_bottom_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_bg"
    tools:context=".ui.commands.AddCommandDialogFragment">

    <ImageButton
        android:id="@+id/bt_previous_or_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="35dp" />


    <TextView
        android:id="@+id/tv_add_command_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bt_previous_or_close"
        app:layout_constraintBottom_toBottomOf="@id/bt_previous_or_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/salamander"
        android:padding="5dp"
        android:text="Ajouter une commande" />

    <LinearLayout
        android:id="@+id/ll_delivery_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="35dp"
        app:layout_constraintTop_toBottomOf="@id/tv_add_command_title"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_delivery_date"
            style="@style/App.custom.EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:drawableStart="@drawable/ic_calendar"
            android:lines="1"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            android:hint="Samedi 10 mai 2021"
            android:textAlignment="center"
            android:ems="10"
            android:maxLines="1"
            android:inputType="date"
            tools:text="" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/ll_delivery_date"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/et_client"
            style="@style/App.custom.MediumEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingStart="15dp"
            android:textSize="14sp"
            android:clickable="true"
            android:drawableStart="@drawable/ic_add_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="Choisir un client"
            android:completionThreshold="1"
            android:layout_marginStart="15dp"/>

        <ImageButton
            android:id="@+id/ib_add_client"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintStart_toEndOf="@+id/et_client"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_client"
            app:layout_constraintBottom_toBottomOf="@+id/et_client"
            android:backgroundTint="@color/ginger"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_1"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_client" />

    <TextView
        android:id="@+id/tv_error_no_articles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/no_articles_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />


        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_articles"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="35dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:padding="15dp"
        android:layout_marginBottom="15dp"
        tools:listitem="@layout/item_article"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Prix total : 15â‚¬"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_articles" />

    <ImageButton
        android:id="@+id/bt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suivant"
        android:shadowRadius="15"
        android:visibility="invisible"
        android:enabled="true"
        android:background="@drawable/ic_right_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_articles"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="30dp"
        android:layout_marginBottom="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>