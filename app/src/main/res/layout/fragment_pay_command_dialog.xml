<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/bottom_sheet_bg"
    tools:context=".ui.commands.AddCommandDialogFragment">

    <ImageButton
        android:id="@+id/bt_pay_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_close"
        android:backgroundTint="@color/brown_57"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_add_command_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/rosario_wght"
        android:gravity="center"
        android:text="@string/pay_command_label"
        android:textColor="@color/brown_57"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/bt_pay_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_client_command_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_add_command_title"
        tools:text="Adrien DELONNE - n° 1234" />

    <TextView
        android:id="@+id/tv_total_command_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_client_command_number"
        tools:text="Prix total de la commande : 40€" />

    <LinearLayout
        android:id="@+id/ll_reduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_total_command_price"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reduction_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:layout_weight="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_add_command_title"
            android:text="Appliquer une réduction ?" />

        <RadioGroup
            android:id="@+id/rg_reduction"
            android:layout_weight="2"
            android:gravity="end"
            android:orientation="horizontal"
            android:checkedButton="@+id/rb_reduction_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_reduction_yes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:text="Oui"/>
        <RadioButton
            android:id="@+id/rb_reduction_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:text="Non"/>
        </RadioGroup>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_reduction"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:focusableInTouchMode="false"
        android:hint="@string/reduction"
        android:visibility="gone"
        tools:visibility="visible"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxStrokeColor="@color/marron_light_1"
        app:boxStrokeErrorColor="@color/salamander"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1.5dp"
        app:hintAnimationEnabled="true"
        app:hintTextColor="@color/orange_003"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_reduction">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_reduction"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="3"
            android:textAlignment="textStart"
            android:textCursorDrawable="@null"
            android:textSize="14sp"
            tools:ignore="MissingConstraints" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/ll_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/til_reduction"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_payment_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:layout_weight="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_add_command_title"
            android:text="Paiement complet ?" />

        <RadioGroup
            android:id="@+id/rg_payment"
            android:layout_weight="2"
            android:gravity="end"
            android:orientation="horizontal"
            android:checkedButton="@+id/rb_payment_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_payment_yes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:text="Oui"/>
        <RadioButton
            android:id="@+id/rb_payment_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:text="Non"/>
        </RadioGroup>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_payment_received"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:hint="Paiement reçu"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxStrokeColor="@color/marron_light_1"
        app:boxStrokeErrorColor="@color/salamander"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1.5dp"
        app:hintAnimationEnabled="true"
        app:hintTextColor="@color/orange_003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_payment">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_payment_received"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:textAlignment="textStart"
            android:textCursorDrawable="@null"
            android:textSize="14sp"
            tools:ignore="MissingConstraints"
            tools:text="30€" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_payment_type"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:background="@drawable/bg_edit_text"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_payment_received">

        <Spinner
            android:id="@+id/spinner_payment_type"
            style="@style/Widget.AppCompat.DropDownItem.Spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_arrow_spinner"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:background="@null" />

        <ImageView
            android:id="@+id/iv_arrow_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:layout_constraintTop_toTopOf="@id/spinner_payment_type"
            app:layout_constraintBottom_toBottomOf="@id/spinner_payment_type"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:src="@android:drawable/arrow_down_float" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_incomplete_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:padding="5dp"
        android:text="@string/incomplete_payment_error"
        android:textColor="@color/red_001"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/tv_total_price_with_reduction"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_total_price_with_reduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:textColor="@color/orange_003"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/bt_proceed_payment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Prix total après réduction : 15€"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_proceed_payment"
        style="@style/MaterialButtonStyle"
        android:enabled="true"
        android:paddingHorizontal="50dp"
        android:text="Procéder au paiement"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/til_reduction"
        app:layout_constraintBottom_toTopOf="@id/bt_proceed_payment"/>

</androidx.constraintlayout.widget.ConstraintLayout>