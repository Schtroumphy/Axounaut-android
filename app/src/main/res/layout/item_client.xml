<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools">

    <CheckBox
        android:id="@+id/cb_client"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_client_name"
        android:layout_marginStart="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/cb_client"
        app:layout_constraintTop_toTopOf="@id/cb_client"
        tools:text="DELONNE Alain" />

    <TextView
        android:id="@+id/tv_fidelity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/tv_client_name"
        app:layout_constraintStart_toEndOf="@id/cb_client"
        app:layout_constraintTop_toBottomOf="@id/tv_client_name"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="18 points" />

    <ImageButton
        android:id="@+id/ib_call"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:tint="@color/salamander"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_call"
        app:layout_constraintEnd_toStartOf="@id/ib_favorite"
        app:layout_constraintTop_toTopOf="@id/cb_client"
        app:layout_constraintBottom_toBottomOf="@id/cb_client" />

    <ImageButton
        android:id="@+id/ib_favorite"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:backgroundTint="@color/salamander"
        android:background="@drawable/ic_star_filled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cb_client"
        app:layout_constraintBottom_toBottomOf="@id/cb_client" />



</androidx.constraintlayout.widget.ConstraintLayout>