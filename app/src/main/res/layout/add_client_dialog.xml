<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_delivery_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:text="@string/add_client_label" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_client_firstname"
            style="@style/App.custom.MediumEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:drawableStart="@drawable/ic_add_user"
            android:lines="1"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            android:hint="Prénom du client"
            android:textAlignment="center"
            android:ems="10"
            android:maxLines="1"
            android:inputType="textCapSentences"
            tools:text="" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_client_phone"
            style="@style/App.custom.MediumEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:inputType="phone"
            android:maxLines="1"
            android:drawableStart="@drawable/ic_add_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="Numéro un client"
            android:layout_marginStart="15dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>