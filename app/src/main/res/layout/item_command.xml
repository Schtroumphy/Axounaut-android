<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_command"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/view_status"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/rounded_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_status"
        app:layout_constraintTop_toTopOf="@+id/tv_client_name"
        android:backgroundTint="@color/teal_700"/>

        <TextView
            android:id="@+id/tv_client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="Adrien DELONNE"
            android:textFontWeight="600"
            android:fontFamily="@font/noto_sans_regular"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/view_status"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/tv_delivery_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="20/12/2021"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_client_name"
            app:layout_constraintTop_toTopOf="@id/tv_client_name"
             />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_articles_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="2dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toEndOf="@+id/view_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_delivery_date"
            tools:itemCount="2"
            tools:listitem="@layout/item_dot_list" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:maxLines="1"
            android:visibility="gone"
            android:fontFamily="@font/roboto_light"
            android:textStyle="italic"
            android:text="Ce client souhaite être livré au plus tard à 12h"
            android:textColor="@color/black"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@+id/tv_status"
            app:layout_constraintBottom_toBottomOf="@id/tv_status"
            app:layout_constraintEnd_toStartOf="@id/tv_status"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="9dp"
            android:text="En cours"
            android:textFontWeight="600"
            android:textColor="@color/teal_700"
            app:layout_constraintTop_toBottomOf="@+id/rv_articles_list"
            app:layout_constraintEnd_toEndOf="@id/tv_delivery_date"
            />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layerType="software"
        android:src="@drawable/dotted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_status" />


</androidx.constraintlayout.widget.ConstraintLayout>