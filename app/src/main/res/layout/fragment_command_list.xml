<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/command_list_fragment"
    android:name="com.jeanloth.project.android.kotlin.axounaut.ui.commandListFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="35dp"
        app:tint="@color/orange_001"
        android:src="@drawable/file"
        app:borderWidth="0dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/gray_0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_coming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="35dp"
        app:tint="@color/gray_1"
        app:borderWidth="0dp"
        android:src="@drawable/future"
        android:backgroundTint="@color/gray_0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fab_all"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/gray_1"
        app:fabCustomSize="35dp"
        app:borderWidth="0dp"
        android:src="@drawable/loading"
        android:backgroundTint="@color/gray_0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fab_coming"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_command_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:paddingBottom="70dp"
        android:focusedByDefault="true"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/fab_loading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:context=".ui.commands.CommandListFragment"
        tools:listitem="@layout/item_command" />

    <TextView
        android:id="@+id/tv_error_no_commands"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/no_articles_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>