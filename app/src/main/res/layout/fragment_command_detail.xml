<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.commands.CommandDetailFragment">

    <LinearLayout
        android:id="@+id/ll_subheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.5">

            <TextView
                android:id="@+id/tv_command_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Alain DELONNE"
                android:gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/marron_dark_1"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_command_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="TERMINE"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/gray_1"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textStyle="italic"
                app:layout_constraintTop_toBottomOf="@id/tv_command_client"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/bt_delete_command"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_dustbin"
            android:foreground="?selectableItemBackgroundBorderless"
            android:backgroundTint="@color/ginger"
            android:layout_marginEnd="8dp"/>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_command_articles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_subheader"
        android:padding="20dp"
        tools:listitem="@layout/item_checkbox_list"
        tools:itemCount="4"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/bt_delivered"
        style="@style/CustomButton"
        android:text="@string/deliver"
        android:visibility="gone"
        tools:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/bt_pay"
        style="@style/CustomGreenButton"
        android:text="@string/pay"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>