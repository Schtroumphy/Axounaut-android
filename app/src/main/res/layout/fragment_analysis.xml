<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.article.ArticleFragment">

    <TextView
        android:id="@+id/tv_error_no_analysis_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/no_analysis_available"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.anychart.AnyChartView
        android:id="@+id/any_chart_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_analysis_title"
        />

    <TextView
        android:id="@+id/tv_analysis_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Les best-sellers"
        android:fontFamily="@font/rosario_wght"
        android:textSize="20sp"
        android:paddingTop="20dp"
        android:textColor="@color/orange_003"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rv_analysis" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_analysis"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingVertical="15dp"
        android:paddingHorizontal="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_analysis_list"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        tools:itemCount="3"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

</androidx.constraintlayout.widget.ConstraintLayout>