<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="horizontal">

    <View
        android:id="@+id/view_bar"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="@color/light_gray_0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/ginger_2"
        android:textFontWeight="600"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/view_bar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pain au beurre 1kg" />

    <ImageButton
        android:id="@+id/bt_expand"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_down_arrow"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginEnd="35dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:padding="10dp"
        android:textFontWeight="600"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        app:layout_constraintEnd_toStartOf="@id/bt_expand"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        tools:text="20 €" />

    <TextView
        android:id="@+id/tv_article_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:textSize="10sp"
        android:text="Commandé x fois"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        tools:text="Commandé plus de 10 fois" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/gp_article_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tv_article_recipe_title, rv_recipe_details, bt_edit_article"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_article_category_or_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/noto_sans_regular"
        android:gravity="center"
        android:text="Salé"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_article_stat"
        app:layout_constraintTop_toBottomOf="@id/tv_article_stat" />

    <TextView
        android:id="@+id/tv_article_recipe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/noto_sans_bold_italic"
        android:gravity="center"
        android:text="Recette"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_article_stat"
        app:layout_constraintTop_toBottomOf="@id/tv_article_category_or_time" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recipe_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_article_recipe_title"
        app:spanCount="2"
        tools:itemCount="3"
        tools:listitem="@layout/item_recipe" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bt_edit_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="35dp"
        app:maxImageSize="18dp"
        android:scaleType="centerCrop"
        app:borderWidth="0dp"
        app:tint="@color/orange_003"
        app:srcCompat="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_recipe_details"
        android:backgroundTint="@color/gray_0"/>

    <ImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layerType="software"
        android:src="@drawable/dotted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_edit_article" />

</androidx.constraintlayout.widget.ConstraintLayout>
