<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:elevation="20dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_name"
                tools:text="Pain au beurre 1kg"
                android:textSize="14sp"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textFontWeight="600"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/orange_002"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/bt_expand"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="15dp"
                android:background="@drawable/ic_down_arrow"
                app:layout_constraintTop_toTopOf="@id/tv_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_name"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="15dp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="10dp"
                android:layout_marginEnd="35dp"
                android:textSize="16sp"
                android:textFontWeight="600"
                android:gravity="center"
                app:layout_constraintEnd_toStartOf="@id/bt_expand"
                app:layout_constraintTop_toTopOf="@id/tv_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_name"
                tools:text="20 €" />

            <TextView
                android:id="@+id/tv_article_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:layout_marginTop="2dp"
                android:textSize="10sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@id/tv_name"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                tools:text="Commandé plus de 10 fois" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/gp_article_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tv_article_category, tv_article_recipe_title, rv_recipe_details, bt_edit_article"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_article_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_regular"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@id/tv_article_stat"
                app:layout_constraintTop_toBottomOf="@id/tv_article_stat"
                android:text="Catégorie : Salé" />

            <TextView
                android:id="@+id/tv_article_recipe_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:gravity="center"
                android:textFontWeight="500"
                android:textColor="@color/marron_light_1"
                app:layout_constraintStart_toStartOf="@id/tv_article_category"
                app:layout_constraintTop_toBottomOf="@id/tv_article_category"
                android:text="@string/recipe" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recipe_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_article_recipe_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/item_recipe"
                tools:itemCount="3" />

            <ImageButton
                android:id="@+id/bt_edit_article"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:foreground="@drawable/ic_edit"
                android:visibility="gone"
                tools:visibility="visible"
                android:background="?selectableItemBackgroundBorderless"
                app:layout_constraintTop_toBottomOf="@id/rv_recipe_details"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="15dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>