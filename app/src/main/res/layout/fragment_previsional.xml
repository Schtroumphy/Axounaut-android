<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.stock.PrevisionalFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Prévisionnel"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_actual"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Actuel"
        app:layout_constraintEnd_toStartOf="@id/tv_need"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_need"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Besoin"
        app:layout_constraintEnd_toStartOf="@id/tv_delta"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_delta"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Delta"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_add_ingredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        android:weightSum="7">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_ingredient"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Produit"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxStrokeColor="@color/marron_light_1"
            app:boxStrokeErrorColor="@color/salamander"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1.5dp"
            app:hintAnimationEnabled="true"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_validate_ingredient"
            app:hintTextColor="@color/green_light_1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_ingredient"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:maxLength="20"
                android:textAlignment="textStart"
                android:inputType="textCapSentences"
                android:textSize="14sp"
                tools:text="Test du tex " />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_quantity_type"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toEndOf="@id/til_ingredient"
            app:layout_constraintTop_toTopOf="@id/til_ingredient"
            app:layout_constraintBottom_toBottomOf="@id/til_ingredient"
            app:layout_constraintEnd_toStartOf="@id/tv_validate_ingredient"
            />

        <TextView
            android:id="@+id/tv_validate_ingredient"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Valider"
            android:textColor="@color/ginger"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintTop_toTopOf="@id/til_ingredient"
            app:layout_constraintBottom_toBottomOf="@id/til_ingredient"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/tv_no_recipe_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Aucune recette/commande enregistrée pour le moment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ingredients"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_add_ingredient"
        app:layout_constraintBottom_toTopOf="@id/bt_shopping_list"
        tools:itemCount="10"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:clipToPadding="false"
        android:layout_marginBottom="8dp"
        tools:listitem="@layout/item_ingredient_previsional" />

    <Button
        android:id="@+id/bt_shopping_list"
        style="@style/CustomButton"
        android:visibility="visible"
        android:text="Liste de course"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>