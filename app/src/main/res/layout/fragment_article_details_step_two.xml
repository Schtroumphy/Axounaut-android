<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.article.ArticleDetailsFragment">

    <LinearLayout
        android:id="@+id/ll_article_name_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_article_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Pain au beurre" />

        <TextView
            android:id="@+id/tv_article_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textStyle="italic"
            android:text="Salé" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_article_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 E"
        android:textSize="16sp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ll_article_name_category"
        app:layout_constraintBottom_toBottomOf="@id/ll_article_name_category" />

    <View
        android:id="@+id/view1"
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/ll_article_name_category"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/gray_1" />

    <TextView
        android:id="@+id/tv_recipe_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recette"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view1"
        app:layout_constraintBottom_toBottomOf="@id/view1" />

    <TextView
        android:id="@+id/tv_recipe_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_recipe_label"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Choix des quantités" />

    <View
        android:layout_width="120dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@id/view1"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/gray_1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recipe_articles"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        tools:listitem="@layout/item_stock_ingredient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_recipe_instructions" />

    <Button
        android:id="@+id/bt_add_article"
        style="@style/CustomButton"
        android:text="Suivant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>