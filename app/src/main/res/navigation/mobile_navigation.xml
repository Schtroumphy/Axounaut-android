<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.jeanloth.project.android.kotlin.axounaut.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_nav_home_to_nav_command_details"
            app:destination="@id/nav_command_details" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.jeanloth.project.android.kotlin.axounaut.ui.dashboard.DashboardFragment"
        android:label="@string/title_stock"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.jeanloth.project.android.kotlin.axounaut.ui.SettingsFragment"
        android:label="Paramètres" />

    <fragment
        android:id="@+id/nav_command_list"
        android:name="com.jeanloth.project.android.kotlin.axounaut.ui.CommandListFragment"
        android:label="Liste commandes"
        tools:layout="@layout/fragment_command_list" >

    </fragment>

    <fragment
        android:id="@+id/nav_command_details"
        android:name="com.jeanloth.project.android.kotlin.axounaut.ui.commands.CommandDetailFragment"
        android:label="Détails commande"
        tools:layout="@layout/fragment_command_detail" >

        <argument
            android:name="commandToDetail"
            app:argType="com.jeanloth.project.android.kotlin.domain_models.entities.Command"
            app:nullable="false" />

    </fragment>

    <fragment
        android:id="@+id/nav_article"
        android:name="com.jeanloth.project.android.kotlin.axounaut.ui.article.ArticleFragment"
        android:label="Articles"
        tools:layout="@layout/fragment_article" >

        <action
            android:id="@+id/action_nav_article_to_nav_article_details"
            app:destination="@id/nav_article_details" />

    </fragment>

    <fragment
        android:id="@+id/nav_article_details"
        android:name="com.jeanloth.project.android.kotlin.axounaut.ui.article.ArticleDetailsFragment"
        android:label="Détails articles"
        tools:layout="@layout/fragment_article_details" >

    </fragment>

    <fragment
        android:id="@+id/nav_clients"
        android:name="com.jeanloth.project.android.kotlin.axounaut.ui.client.ClientFragment"
        android:label="Clients"
        tools:layout="@layout/fragment_client" >

        <action
            android:id="@+id/action_nav_clients_to_nav_clients_details"
            app:destination="@id/nav_clients_details" />

    </fragment>

    <fragment
        android:id="@+id/nav_clients_details"
        android:name="com.jeanloth.project.android.kotlin.axounaut.ui.client.ClientDetailsFragment"
        android:label="Clients details"
        tools:layout="@layout/fragment_client_details" >

    </fragment>

</navigation>